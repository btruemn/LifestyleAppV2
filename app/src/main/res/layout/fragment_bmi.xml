<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.BmiFragment">

    <include
        android:id="@+id/app_bar"
        layout="@layout/profile_bar"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="75dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bmr_display"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="2000 cals"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textSize="26sp"
                app:fontFamily="sans-serif-condensed" />

            <TextView
                android:id="@+id/bmi_display"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="15"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textSize="26sp"
                app:fontFamily="sans-serif-condensed" />

            <TextView
                android:id="@+id/weight_display"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="150 lbs"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textSize="26sp"
                app:fontFamily="sans-serif-condensed" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginTop="7dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="BMR"

                android:textAlignment="center"
                android:textColor="@android:color/holo_blue_bright"
                android:textSize="16sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="BMI"

                android:textAlignment="center"
                android:textColor="@android:color/holo_blue_bright"
                android:textSize="16sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Weight"

                android:textAlignment="center"
                android:textColor="@android:color/holo_blue_bright"
                android:textSize="16sp"
                android:textStyle="bold|italic" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingLeft="10dp"
            android:text="BMI"
            android:textColor="@android:color/holo_blue_bright"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="@string/bmi_description"
            android:textColor="@color/colorWhite"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:text="BMR"
            android:textColor="@android:color/holo_blue_bright"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:paddingLeft="10dp"
            android:text="@string/bmr_description"
            android:textColor="@color/colorWhite"
            android:textStyle="italic" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="528dp"
                android:layout_height="262dp"
                android:layout_marginTop="60dp"
                android:src="@drawable/active"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>


</FrameLayout>